# LearningPortal Server Configuration Template
# Copy this file to .env and fill in the actual values
# NEVER commit .env file to version control

# Environment
PORT=5000
NODE_ENV=development

# Database (MongoDB) - Learning Portal Database
# Option A: Local MongoDB - mongodb://127.0.0.1:27017/parashari_learning_dev
# Option B: Shared DEV MongoDB Atlas - Get URI from team lead
MONGODB_URI=

# Shared User Database (AB_AI) - for authentication sync
# Must point to same database as AB_AI uses
USER_DB_URI=

# Security (MUST match AB_AI JWT_SECRET)
JWT_SECRET=

# Payment Gateway (Razorpay - Indian Gateway)
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=
RAZORPAY_PLAN_ID=
RAZORPAY_WEBHOOK_SECRET=

# Cloudflare Worker for Video Delivery
CLOUDFLARE_WORKER_URL=
WORKER_API_KEY=
VIDEO_SIGNING_SECRET=

# Frontend Configuration
CLIENT_URL=http://localhost:5173
DOMAIN=http://localhost:5173

# AB_AI Integration
AB_AI_PRODUCTION_URL=http://localhost:3000

# Access Control (OPEN for local dev, RESTRICTED for production)
ACCESS_MODE=OPEN
